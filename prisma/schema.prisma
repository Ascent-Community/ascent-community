generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator erd {
  provider                  = "prisma-erd-generator"
  includeRelationFromFields = true
  output                    = "../ERD.svg"
  theme                     = "neutral"
}

enum Role {
  FRONTEND
  BACKEND
  FULLSTACK
  DESIGNER
  MOBILE
}

enum Status {
  OPEN
  DEVELOPMENT
  FINISHED
}

model User {
  id        String      @id @default(uuid())
  name      String 
  email     String   @unique
  projects  Project[]
  technologies Technology[]
}

model Project {
  id            String        @id @default(uuid())
  name          String
  description   String
  createdAt     DateTime   @default(now())
  status        Status    @default(OPEN)
  technologies  Technology[] 
  positions     Position[]
  users         User[] 
}

model Position {
  id       String   @id @default(uuid())
  project  Project @relation(fields: [projectId], references: [id])
  role     Role  
  projectId String
}

model Technology {
  id     String      @id @default(cuid())
  name   String
  projects Project[]
  users User[]
}